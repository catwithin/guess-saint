<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/beige_500</item>
        <item name="colorPrimaryDark">@color/beige_700</item>
        <item name="colorPrimaryVariant">@color/beige_200</item>
        <item name="colorSecondary">@color/bordo_accent</item>
        <item name="colorAccent">@color/bordo_accent</item>
        <item name="colorSurface">@color/yellow_50</item>
        <item name="colorOnSurface">@color/bordo_accent</item>

    </style>

    <style name="GuessButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/guess_button</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="round_button" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">8dp</item>
    </style>

</resources>

