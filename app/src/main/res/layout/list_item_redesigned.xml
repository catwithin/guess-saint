<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/list_saint_icon"
            app:srcCompat="@drawable/agatha"
            android:layout_marginTop="8dp"
            android:layout_marginStart="@dimen/list_margin_start"
            android:layout_height="@dimen/min_height_list_item"
            android:layout_width="@dimen/min_height_list_item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/list_saint_name"
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/list_saint_icon"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="serif"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            android:textColor="@color/primaryTextColor"
            android:textSize="22sp"

            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.0" />

    <TextView
            android:id="@+id/list_saint_attributes"
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/list_saint_name"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/list_saint_name"
            android:textColor="@color/primaryTextColor"

            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginBottom="8dp" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            app:layout_constraintGuide_end="@dimen/list_margin_end"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>